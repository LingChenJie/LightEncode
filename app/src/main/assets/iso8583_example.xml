    <field position="11"  lengthEncode="BCD"  lengthType="NONE" dataLength="6"     dataEncode="BCD" alignType="LEFT" padding="0"  desc=""/>
    <field position="22"  lengthEncode="BCD"  lengthType="NONE" dataLength="4"     dataEncode="BCD" alignType="LEFT" padding="0"  desc=""/>
    <field position="35"  lengthEncode="BCD"  lengthType="PAIR" dataLength="37"    dataEncode="BCD" alignType="LEFT" padding="0"  desc=""/>
    <field position="41"  lengthEncode="BCD"  lengthType="NONE" dataLength="8"     dataEncode="ASC" alignType="LEFT" padding="0"  desc=""/>
    <field position="42"  lengthEncode="BCD"  lengthType="NONE" dataLength="15"    dataEncode="ASC" alignType="LEFT" padding="0"  desc=""/>
